{
  "name": "vitejs-react-template",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "pnpm --stream -r start",
    "dev:api": "pnpm --filter api run dev",
    "dev:app": "pnpm --filter app run dev",
    "clean": "rm -rf ./node_modules && pnpm -r clean",
    "prepare": "husky install "
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  },
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=8.3.1"
  }
}
